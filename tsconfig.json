{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES6",
    "paths": {
      "*": ["types/*"]
    },
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["./node_modules/@types", "./src/@types", "./src/types.d.ts"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
